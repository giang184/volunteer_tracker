<h2>Volunteer: <%= @volunteer.name %></h2>
<br>
<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename volunteer&ensp;</label>
  <input id="name" name="name" type="text">&ensp;

  <button class="btn-secondary" type="submit">Update Volunteer</button>
</form>
<br>
<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button class="btn-danger" type="submit">Delete Volunteer</button>
</form>
<br>
<a href="/projects/<%= @volunteer.project.id %>">Back to project: <%= @volunteer.project.title %></a>