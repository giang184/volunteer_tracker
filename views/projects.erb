<div class="row">
  <div class="col-sm-5">
      <h3>Projects:</h3>

      <% if @projects.any? %>
        <ul>
          <% @projects.each do |project| %>
            <li><a href="/projects/<%= project.id %>"><%= project.title %></a></li>
          <% end %>
        </ul>
      <% else %>
        <p>There are currently no projects available.</p>
      <% end %>

      <p><a href="/projects/new">Add a new project</a></p>
      </div>
</div>